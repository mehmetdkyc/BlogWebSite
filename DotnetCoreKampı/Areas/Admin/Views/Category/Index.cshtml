@model List<EntityLayer.Concrete.Category>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .categoryLinkButton{
        color:white;
    }
</style>
<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Kategoriler </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Aktiflik Durumu</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>
                                @if (item.CategoryStatus)
                                {
                                    <label class="badge badge-gradient-success">Aktif</label>
                                }
                                else
                                {
                                    <label class="badge badge-gradient-light">Pasif</label>
                                }
                            </td>
                            <td> <a href="editCategory(@item.CategoryID)" class="btn btn-info"> Güncelle</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-success categoryLinkButton">Aktif Yap</a>
            <a class="btn btn-danger categoryLinkButton">Pasif Yap</a>
        </div>
    </div>
</div>
