                        <h4><strong>@Model.Name</strong></h4>
                        <p><i class="fa fa-map-marker"></i> İstanbul/Turkey</p>
                        <h5>
                            About me
                        </h5>
                        <p>
                            @Model.WriterAbout
                        </p>
                        <div class="row m-t-lg">
                            <div class="col-md-6">
                                <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong>@Model.Blogs.Count</strong> Posts</h5>
                            </div>
                            <div class="col-md-6">
                                <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong>@Model.Comments.Count</strong> Have Comments</h5>
                            </div>
                        </div>
