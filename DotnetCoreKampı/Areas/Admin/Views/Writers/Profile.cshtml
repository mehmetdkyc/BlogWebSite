@model EntityLayer.Concrete.Writer
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Profil Bilgileri</h5>
                </div>
                <div>
