@model List<EntityLayer.Concrete.Blog>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">

                <div class="ibox">

                    <div class="ibox-content product-box">
                        <div class="product-imitation">
                            <img src="~/BlogPostImage/@item.BlogImage" class="card-img-top img-fluid" alt="">
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @item.Comments.Count
                            </span>
                            <small class="text-muted">@item.Category.CategoryName</small>
                            <a href="#" class="product-name"> @item.BlogTitle</a>

                            <div class="small m-t-xs">
                                @item.BlogContent.Substring(0, item.BlogContent.Length<70 ? item.BlogContent.Length :69)
                            </div>
                            <div class="m-t text-righ">

                                <a href="/Admin/Blog/BlogDetail/@item.BlogID" class="btn btn-xs btn-outline btn-primary">Düzenle.. <i class="fa fa-long-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        }
    </div>
</div>