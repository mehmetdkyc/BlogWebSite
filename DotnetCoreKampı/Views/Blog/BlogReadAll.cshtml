@model Blog
@{
    ViewData["Title"] = "Blog Detay";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<body>
    <section class="banner-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">

                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="single.html">
                                        <img src="~/BlogPostImage/@Model.BlogThumbnailImage" class="img-fluid" alt="" width="480" height="380">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)Model.CreateDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-thumbs-up"></i> 0 Likes
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i>  @Model.Comments.Count
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>

                            <h3>
                                <a href="#">@Model.BlogTitle </a>
                            </h3>
                            <p>
                                @Model.BlogContent
                            </p>
                        </div>
                    

                    @await Component.InvokeAsync("CommentListByBlog", new { id = ViewBag.blogId}) 

                    @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml", new { id = ViewBag.blogId })

                </div>
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        <h4>Yeni haberler için abone ol.</h4>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                        @await Component.InvokeAsync("CategoryList")

                        @await Component.InvokeAsync("WriterOtherBlogs")
                        <div class="single-gd tech-btm">
                            <h4>Latest Post</h4>
                            <div class="blog-grids">
                                <div class="blog-grid-left">
                                    <a href="single.html">
                                        <img src="~/web/images/b1.jpg" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5>
                                        <a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
                                    </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->

</body>

