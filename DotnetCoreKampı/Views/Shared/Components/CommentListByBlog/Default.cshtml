@model IEnumerable<Comment>
    <style>
        #commentImage {
            border-radius: 20%;
        }
    </style>

    <div class="comment-top">
        <h4>Yorumlar</h4>
        @if (Model.Count() == 0)
        {
            <h2>Daha önce yorum yapılmamış.</h2>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="media">

                    <img id="commentImage" src="~/WriterImageFile/@item.Writer.WriterImage" class="img-fluid" alt="Avatar" />
                    <div class="media-body">
                        <h5 class="mt-0">@item.CommentUserName</h5>
                        <p>
                            @item.CommentContent
                        </p>

                    </div>


                </div>
            }
        }
    </div>