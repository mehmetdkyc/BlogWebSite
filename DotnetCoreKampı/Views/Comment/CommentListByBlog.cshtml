@model IEnumerable<EntityLayer.Concrete.Comment>

<style>
    img {
        border-radius: 50%;
    }
</style>
<div class="comment-top">
    <h4 >Comments</h4>
    <div class="media">
        @if (Model.Count() == 0)
        {
            <h2>Daha önce yorum yapılmamış.</h2>
        }
        else
        {
            @foreach (var item in Model)
            {
                <img src="~/WriterImageFile/@item.Writer.WriterImage" alt="avatar" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>

                </div>
            }
        }
        </div>
</div>